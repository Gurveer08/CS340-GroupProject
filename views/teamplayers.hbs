<form id="add-team-players-form-ajax">

    <label for="input-teamID">Team:</label>
    <select name="input-teamID" id="input-teamID-ajax">
        <option value="">Select a Team</option>
        {{#each teams}}
        <option value="{{this.teamID}}">{{this.teamName}}</option>
        {{/each}}
    </select>
    
    <label for="input-playerID">Player:</label>
    <select name="input-playerID" id="input-playerID-ajax">
        <option value="">Select a Player</option>
        {{#each players}}
        <option value="{{this.playerID}}">{{this.playerName}}</option>
        {{/each}}
    </select>

    <label for="input-startDate">Start Date</label>
    <input type="date" name="input-startDate" id="input-startDate" placeholder="Enter Start Date"> 

    <label for="input-endDate">End Date</label>
    <input type="date" name="input-endDate" id="input-endDate" placeholder="Enter End Date">

    <button type="submit">Add Team Player</button>
</form>  

