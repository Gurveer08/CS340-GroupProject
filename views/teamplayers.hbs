<h1>Team Players </h1>  

{{!-- Create a table --}}
<table id="team-players-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.teamPlayerID}}</td>
            <td>{{this.teamName}}</td>
            <td>{{this.playerName}}</td>
            <td>{{this.startDate}}</td>
            <td>{{this.endDate}}</td>
            <td><button onclick="deleteTeamPlayer({{this.teamPlayerID}})">Delete</button></td>

        </tr>
        {{/each}}
    </tbody>
</table> 
